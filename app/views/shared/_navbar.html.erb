<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      Logo :-) Mamie Great Again
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item me-4">
            <%= link_to root_path, class: "nav-link text-primary text-uppercase animate-link" do %>
              Home <i class="fa fa-arrow-right"></i>
            <% end %>
          </li>
          <li class="nav-item me-3">
            <%= link_to dashboard_path, class: "nav-link text-primary text-uppercase animate-link" do %>
              Profile <i class="fa fa-arrow-right"></i>
            <% end %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "#", class: "nav-link text-primary text-uppercase animate-link" do %>
              Messages <i class="fa fa-arrow-right"></i>
            <% end %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "Find a job", dashboard_path, class: "nav-link text-uppercase btn-animate"%>
          </li>
          <li class="nav-item">
            <%# juste pour avoir un visuel du user sur lequel on est connectÃ© pendant le developpement%>
            <p class="nav-link text-primary"><%= current_user.first_name %></p>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to dashboard_path, class: "dropdown-item text-primary p-2" do %>
                My profile
              <% end %>
              <%= link_to new_mission_path, class: "dropdown-item text-primary p-2" do %>
                Publish a mission
              <% end %>
              <%= link_to missions_path, class: "dropdown-item text-primary border-bottom p-2" do %>
                See all missions
              <% end %>
              <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-primary" do %>
                Log out
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item me-3">
            <%= link_to missions_path, class: "nav-link text-primary text-uppercase animate-link" do %>
              Find a job <i class="fa fa-arrow-right"></i>
            <% end %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "Register", new_user_registration_path, class: "nav-link text-uppercase btn-animate" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-uppercase btn-animate btn-outline " %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
