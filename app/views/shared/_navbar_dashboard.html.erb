<aside class="nav-dashboard float" style="width: 280px">
  <div class = "d-flex px-3 justify-content-center align-items-center">
    <div class="current-user d-flex" style="width: 100%">
      <% if current_user.photo.key.nil? %>
        <img class="avatar-large p-1 flex-shrink-0 align-items-center justify-content-center" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://media.istockphoto.com/id/1337144146/fr/vectoriel/vecteur-dic%C3%B4ne-de-profil-davatar-par-d%C3%A9faut.jpg?b=1&s=170667a&w=0&k=20&c=eYsURDWBMsbvhjRxVQ8-pgC0q4b04DSYbCMnY5OlH14=" />
      <% else %>
        <div class="avatar-large p-1 flex-shrink-0 align-items-center justify-content-center" id="navbarDropdown" aria-hashpopup="true" aria-expanded="false" data-bs-toggle="dropdown">
          <%= cl_image_tag current_user.photo.key  %>
        </div>
      <% end %>
      <%= render '/missions/user_rating', instance: current_user %>
    </div>
  </div>
  <div class="d-flex flex-column flex-shrink-0 px-3">
    <ul class="nav flex-column mb-auto">
      <li class="nav-item mb-1">
        <a class="dashnav-link <%= "active" if action_name == "dashboard" %>" href="/dashboard">
          <i class="fa-solid fa-user"></i>
          Profil
        </a>
      </li>
      <li class="nav-item mb-1">
          <a class="dashnav-link <%= "active" if action_name == "myindex" %>" href="/mymissions">
            <i class="fa-solid fa-list"></i>
            My missions
          </a>
      </li>
      <li class="nav-item mb-1">
          <a class="dashnav-link <%= "active" if action_name == "myindex_candidate" %>" href="/mymissions_candidates">
            <i class="fa-solid fa-list"></i>
            My applications
          </a>
      </li>
      <li class="nav-item mb-1">
        <a class="dashnav-link <%= "active" if action_name == "index" %>" href="/chatrooms">
          <i class="fa-solid fa-message"></i>
          Messages
        </a>
      </li>

    </ul>
  </div>
</aside>
