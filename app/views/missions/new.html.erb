<div class="m-5">
  <h2 class="text-center">Créer une mission</h2><br>
  <div class="justify-content-center d-flex">
    <div class="p-2 col-4">
      <%= simple_form_for(@mission) do |f| %>
        <%= f.input :title, label: "Titre", placeholder:"Titre de la mission..." %>
        <%= f.input :description, label:"Description", placeholder: "Décrire la mission..." %>
        <%= f.input :location, label: "Adresse" %>
        <%= f.input :reward_cents, label:"Rémunération"  %>
        <%= f.submit "Créer la mission", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
